<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>キングダム乱 争覇戦 作戦ボード</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: #f8f8f8;
            touch-action: manipulation;
        }
        #board-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #board {
            width: 3000px;
            height: 2000px;
            background-color: #ffffff;
            border: 5px solid black;
            position: absolute;
        }
        .castle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            position: absolute;
            cursor: grab;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            border: 2px solid black;
            user-select: none;
        }
        .castle[data-pt="1000"] { background-color: blue; }
        .castle[data-pt="1600"] { background-color: green; }
        .castle[data-pt="2700"] { background-color: red; }
        #castle-menu {
            position: fixed;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            display: none;
            background: rgba(255, 255, 255, 0.9);
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>
    <div id="castle-menu">
        <button onclick="selectCastleType(1000)">1000pt 城</button>
        <button onclick="selectCastleType(1600)">1600pt 城</button>
        <button onclick="selectCastleType(2700)">2700pt 城</button>
    </div>
    <div id="board-container">
        <div id="board"></div>
    </div>
    <script>
        let selectedCastleType = null;
        const board = document.getElementById("board");
        const castleMenu = document.getElementById("castle-menu");
        let longPressTimer;

        function selectCastleType(pt) {
            selectedCastleType = pt;
            castleMenu.style.display = 'none';
        }

        board.addEventListener("touchstart", (event) => {
            longPressTimer = setTimeout(() => {
                castleMenu.style.display = 'block';
            }, 500); // 長押しでメニュー表示
        });

        board.addEventListener("touchend", () => {
            clearTimeout(longPressTimer);
        });

        board.addEventListener("click", (event) => {
            if (!selectedCastleType) return;
            const castle = document.createElement("div");
            castle.className = "castle";
            castle.dataset.pt = selectedCastleType;
            castle.style.left = `${event.clientX - 20}px`;
            castle.style.top = `${event.clientY - 20}px`;
            castle.innerText = selectedCastleType;
            castle.draggable = true;

            castle.addEventListener("mousedown", (e) => {
                const offsetX = e.clientX - castle.offsetLeft;
                const offsetY = e.clientY - castle.offsetTop;
                function moveAt(pageX, pageY) {
                    castle.style.left = `${pageX - offsetX}px`;
                    castle.style.top = `${pageY - offsetY}px`;
                }
                function onMouseMove(event) {
                    moveAt(event.pageX, event.pageY);
                }
                document.addEventListener("mousemove", onMouseMove);
                document.addEventListener("mouseup", () => {
                    document.removeEventListener("mousemove", onMouseMove);
                }, { once: true });
            });

            castle.addEventListener("contextmenu", (e) => {
                e.preventDefault();
                board.removeChild(castle);
            });
            board.appendChild(castle);
        });
    </script>
</body>
</html>
